<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p>Description: <%= @work.description %> </p>
    <section>
      <%= link_to 'Back to media ranks', root_path, class:"btn btn-primary" %>
      <%= link_to 'Edit', edit_work_path(@work.id), class:"btn btn-primary" %>
      <%= link_to 'Upvote', work_upvote_path(@work.id), class:"btn btn-primary" %>
      <%= link_to 'Delete', work_path(@work.id),
          method: :delete , data: {confirm: 'Are you sure to delete?'}, 
          class:"btn btn-danger" 
      %>
    </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= pluralize @work.votes.count, "vote" %> for this <%= @work.category %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
    <% if @work.votes.count > 0 %>
      <% @work.votes.each do |vote|%>
        <tr>
          <td><%= link_to User.find_by(id: vote.user_id).username, user_path(vote.user_id) %></td>
          <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
        </li>
        </tr>
      </tbody>
      <% end %>
    <% else %>
      <p> There is no vote for <%=@work.title%> yet ... </p>
    <% end %>
    </table>
  </section>
</main>